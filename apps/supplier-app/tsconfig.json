{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "strict": true,
    "noEmit": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": [
      "jest",
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@megacommerce/shared": [
        "../../dist/packages/shared/src/index.js"
      ],
      "@megacommerce/shared/server": [
        "../../dist/packages/shared/src/server/index.js"
      ],
      "@megacommerce/shared/client": [
        "../../dist/packages/shared/src/client/index.js"
      ],
      "@megacommerce/ui/client": [
        "../../packages/ui/src/client.ts"
      ],
      "@megacommerce/ui/server": [
        "../../packages/ui/src/server.ts"
      ],
      "@megacommerce/ui/shared": [
        "../../packages/ui/src/shared.ts"
      ]
    }
  },
  "include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "../../apps/supplier-app/.next/types/**/*.ts",
    "../../dist/apps/supplier-app/.next/types/**/*.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
